<div class="d-flex justify-content-center align-items-center pt-5">
    <div class= "text-center blur p-4" style= "width : 500px">
        <h2>Crée un événement</h2>
        <%= form_with url: "/events", method: :post do |f| %>
            <div class="m-3 ">
                <label class= "pb-2">Titre</label>
                <%= f.text_field :title, class:'form-control bg-transparent border-dark'%>
            </div>
            <div class="m-3 ">
                <label class= "pb-2">Description</label>
                <%= f.text_area :description, class:'form-control bg-transparent border-dark', style: "height: 150px"%>
            </div>
            <div class="m-3 ">
                <label class= "pb-2">Prix</label>
                <%= f.number_field :price, in: 1..1000, class:'form-control bg-transparent border-dark'%>
            </div>
            <div class="m-3 ">
                <label class= "pb-2">Lieu</label>
                <%= f.text_field :location, class:'form-control bg-transparent border-dark'%>
            </div>
            <div class="m-3 ">
                <label class= "pb-2">Date</label>
                <%= f.date_field :start_date, class:'form-control bg-transparent border-dark'%>
            </div>
            <div class="m-3 ">
                <label class= "pb-2">Durée (en minute)</label>
                <%= f.number_field :duration, step: 5, class:'form-control bg-transparent border-dark'%>
            </div>
            <div class="">
                <button type="submit" class="btn btn-lg btn-primary mt-3">Poster</button>
            </div>
        <% end %>
    </div>
</div>